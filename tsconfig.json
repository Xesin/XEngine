{
    "include": [
        "typings/*.d.ts/",
        "source/**/**.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "outFile": "XEngine.js",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "alwaysStrict": true
    }
}